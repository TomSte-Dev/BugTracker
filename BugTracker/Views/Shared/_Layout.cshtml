<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTracker.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="wrapper">
            <!-- Left sidebar -->
            <div class="left-sidebar" id="left-sidebar">
                <!-- Content for left sidebar -->
                <a class="navbar-brand text-center" asp-area="" asp-controller="Home" asp-action="Index">BugTracker</a>
                <hr />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>

            <!-- Content area -->
            <div class="content-area">
                <!-- Top navbar -->
                <div class="top-navbar">
                    <!-- Top navbar -->
                    <nav class="navbar navbar-expand-md navbar-light bg-light">
                        <!-- Navbar content for top navbar -->
                        <button class="navbar-toggler" type="button" id="sidebar-toggler" aria-expanded="false" aria-label="Toggle left sidebar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <!-- Move the login partial to the right -->
                        <div class="ml-auto">
                            <partial name="_LoginPartial" />
                        </div>
                    </nav>
                </div>

                <!-- Main content -->
                <div>
                    <!-- Your main content goes here -->
                Right Column Content
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>



