@model IEnumerable<BugTracker.Models.ProjectUser>

@{
    ViewData["Title"] = "TeamMembers";
    Layout = "_TicketLayout";
}

<h1>TeamMembers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectUserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectUserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectUserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
