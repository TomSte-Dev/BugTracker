@page // Indicates that this file represents a Razor Page
@model IndexModel 
@{
    ViewData["Title"] = "Profile"; 
    ViewData["ActivePage"] = ManageNavPages.Index; // Sets the active page in the navigation
}

<h3>@ViewData["Title"]</h3> 
<partial name="_StatusMessage" for="StatusMessage" /> 

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <!-- Profile update form -->
            <!-- Displays model validation errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> 

            <div class="form-floating mb-3">
                <!-- Displays username input (disabled) -->
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled /> 
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <!-- Displays phone number input -->
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." /> 
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <!-- Displays validation error for phone number -->
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span> 
            </div>

            <div class="form-floating mb-3">
                <!-- Displays first name input -->
                <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name." /> 
                <label asp-for="Input.FirstName" class="form-label"></label>
                <!-- Displays validation error for first name -->
                <span asp-validation-for="Input.FirstName" class="text-danger"></span> 
            </div>
            <div class="form-floating mb-3">
                <!-- Displays last name input -->
                <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name." /> 
                <label asp-for="Input.LastName" class="form-label"></label>
                <!-- Displays validation error for last name -->
                <span asp-validation-for="Input.LastName" class="text-danger"></span> 
            </div>

            <!-- Submit button for updating profile -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button> 
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> 
}
